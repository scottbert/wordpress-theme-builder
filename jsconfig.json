{
  "compilerOptions": {
    "baseUrl": "/.",
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "dom"],
    "checkJs": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "jsx": "preserve",
    "paths": {
      "~/*": ["./src/js/modules/*"]
    },
    "types": ["node", "react"]
  },
  "include": [
    "gulpfile.esm.js/**/*.js",
    "gulpfile.esm.js/**/*.ts",
    "src/**/*.js",
    "src/**/*.ts",
    "!node_modules/**/*.js"
  ],
  "exclude": ["node_modules"]
}
